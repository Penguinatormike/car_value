{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-lg-8 offset-lg-5">
        <div class="row justify-content-center">
            <div>
                <h1>Car Valuation</h1>
            </div>

            <div>
                {{ form_start(form) }}
                <div>
                    {{ form_label(form.make) }}
                    {{ form_widget(form.make) }}
                    {{ form_errors(form.make) }}
                </div>
                <div>
                    {{ form_label(form.model) }}
                    {{ form_widget(form.model) }}
                    {{ form_errors(form.model) }}
                </div>
                <div>
                    {{ form_label(form.year) }}
                    {{ form_widget(form.year) }}
                    {{ form_errors(form.year) }}
                </div>
                <div>
                    {{ form_label(form.trim) }}
                    {{ form_widget(form.trim) }}
                    {{ form_errors(form.trim) }}
                </div>
                <div>
                    {{ form_label(form.mileage) }}
                    {{ form_widget(form.mileage) }}
                    {{ form_errors(form.mileage) }}
                </div>
                <div>
                    {{ form_label(form.state) }}
                    {{ form_widget(form.state) }}
                    {{ form_errors(form.state) }}
                </div>
                {{ form_row(form.submit) }}
                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}